[Unit]
Description=HDFS Datanode Announcer
BindsTo=hdfs-datanode@%i.service
After=hdfs-datanode@%i.service

[Service]
ExecStart=/bin/bash -c "while [ -n \"$IP\"]; do IP=$(docker inspect -f '{{.NetworkSettings.IPAddress}}' hdfs-datanode-%i); sleep 1; done; while true; do etcdctl set --ttl 60 /skydns/local/vogt/sky/datanode-%i {\\\"host\\\":\\\"$IP\\\"}; sleep 45; done"
Restart=always
RestartSec=60s

[X-Fleet]
MachineOf=hdfs-datanode@%i.service
